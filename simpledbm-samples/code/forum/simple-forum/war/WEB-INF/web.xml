<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>simpleForumServlet</servlet-name>
    <servlet-class>org.simpledbm.samples.server.SimpleForumServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>simpleForumServlet</servlet-name>
    <url-pattern>/forum/greet</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>forum.html</welcome-file>
  </welcome-file-list>

</web-app>
